@model RazaCreacionViewModel

@{
    ViewData["Title"] = "Editar Rasza";
}


<form asp-action="EditarRaza" class="form">


<h1>Editar raza @Model.Nombre</h1>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EspecieId" class="form-label"></label>
        <select asp-for="EspecieId" asp-items="Model.ListaEspecies" class="form-select"></select>
        <span asp-validation-for="EspecieId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a  class="btn btn-secondary" asp-action="Index">Cancelar</a>

</form>

@section Scripts{
                    <partial name="_ValidationScriptsPartial" />
}