@model IEnumerable<Especie>

@{
    ViewData["Title"] = "Especies";
}

<div class="card">
    <div class="card-body">

<h1>Especies</h1>
<h5></h5>

<a asp-action="Crear" class="btn btn-primary mb-3">Crear Especie</a>

<table class="table">
    <thead>
        <tr>
            <th>Acciones</th>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var especie in Model)
        {
            <tr>
                <td>
                    <input type="hidden" value="@especie.Id" class="ids"/>
                    <a class="btn btn-primary" asp-action="Editar" asp-route-id="@especie.Id">Editar</a>
                    <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@especie.Id">Borrar</a>
                </td>
                <td>
                    @especie.Nombre;
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
                        <partial name="_ValidationScriptsPartial" />
}


            </div>
     </div>