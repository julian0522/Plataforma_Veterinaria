@model Especie

@{
    ViewData["Title"] = "Crear Especie";
}



<form asp-action="Crear" class="form" id="formulario" onsubmit="enviarFormulario(event)">

    <h1>Crear Especie</h1>
<h5>La especie hace referencia a la especie de la mascota.</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" >Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
            <partial name="_ValidationScriptsPartial" />

            <script>
                function enviarFormulario(e){
                    e.preventDefault();
                    Swal.fire({
                            title: 'Especie Registrada Con exito',
                            icon: 'success',
                            confirmButtonText: 'OK'
                    }).then((resultado) =>{
                        const formulario = document.getElementById('formulario');
                        formulario.submit();
                    })
                }
            </script>

            
}
