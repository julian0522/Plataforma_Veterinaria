@model MascotaCreacionViewModel

@{
    ViewData["Title"] = "Detalle Mascota";
}




<form asp-action="EditarMascota" class="form">

    <h1>Detalle Mascota</h1>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="UsuarioId" class="form-label">Nombre del vaterinario que registro la mascota</label>
         <select asp-for="UsuarioId" asp-items="Model.ListaUsuarios" class="form-select" disabled ="disabled"></select>
    </div>

     <!--Campo Id-->
    <div class="mb-3">
        <label asp-for="Id" class="form-label">Id mascota</label>
        <input asp-for="Id" class="form-control" disabled ="disabled"/>
    </div>

    <!--Campo Nombre-->
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" disabled ="disabled"/>
    </div>

    <!--Campo ClienteId-->
    <div class="mb-3">
        <label asp-for="ClienteId" class="form-label"> Nombre del Dueño</label>
        <select asp-for="ClienteId" asp-items="Model.ListaClientes" class="form-select" disabled ="disabled"></select>
    </div>

    <!--Campo Sexo-->
    <div class="mb-3">
        <label asp-for="SexoId" class="form-label">Sexo</label>
        <select asp-for="SexoId" asp-items="Html.GetEnumSelectList<Sexo>()" class="form-select" disabled ="disabled"></select>
    </div>

    <!--Campo EspecieId-->
    <div class="mb-3">
        <label asp-for="EspecieId" class="form-label">Especie</label>
        <select asp-for="EspecieId" asp-items="Model.ListaEspecies" class="form-select" disabled ="disabled"></select>
    </div>

    <!--Campo RazaId-->
     <div class="mb-3">
        <label asp-for="RazaId" class="form-label">Raza</label>
        <select asp-for="RazaId" asp-items="Model.ListaRazas" class="form-select" disabled ="disabled"></select>
    </div>

    <!--Campo Edad-->
    <div class="mb-3">
        <label asp-for="Edad" class="form-label"></label>
        <input asp-for="Edad" class="form-control" disabled ="disabled"></input>
    </div>

    <!--Campo FechaRegistro-->
    <div class="mb-3">
        <label asp-for="FechaRegistro" class="form-label">Fecha en la que se registro la mascota</label>
        <input asp-for="FechaRegistro" class="form-control" disabled ="disabled"></input>
    </div>

    <!--Campo Descripcion-->
    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control" disabled ="disabled"></textarea>
    </div>

    <a class="btn btn-secondary" asp-action="Index">Volver</a>
</form>


@section Scripts{
                        <partial name="_ValidationScriptsPartial" />     
}
