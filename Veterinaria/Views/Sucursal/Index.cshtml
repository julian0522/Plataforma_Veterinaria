@model IEnumerable<Sucursal>

@{
    ViewData["Title"] = "Sucursales";
}

<div class="card">
    <div class="card-body">

<h1>Sucursales</h1>
<h5></h5>

<a asp-action="Crear" class="btn btn-primary mb-3">Crear Sucursal</a>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Telefono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sucursal in Model)
        {
                <tr>
                    <td>
                        @sucursal.Nombre
                    </td>

                    <td>
                        @sucursal.Direccion.ToUpper();
                    </td>

                    <td>
                        @sucursal.Telefono
                    </td>

                    <td>
                        <input type="hidden" value="@sucursal.Id" class="ids"/>
                        <a  asp-action="Editar" asp-route-id="@sucursal.Id" class="btn btn-primary">
                                <i class="bi-pencil-fill">Editar</i>
                        </a>

                        <a asp-action="Borrar" asp-route-id="@sucursal.Id" class="btn btn-danger">
                               <i class="bi-trash-fill">Borrar</i>
                        </a>
                    </td>
                    
                </tr>
        }
    </tbody>
</table>

@section Scripts{
                        <partial name="_ValidationScriptsPartial" />
}

     </div>
</div>